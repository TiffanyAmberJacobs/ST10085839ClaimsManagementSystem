@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv3NfRr3VVVp5A7k6jwUnPRPZ5x2bF6GfOk84fTeXTz0wT3th1q9Xa9wrUuF" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .container {
            margin-top: 50px;
            padding: 30px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .container h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
        }

        .btn-custom {
            padding: 12px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 4px;
            border: none;
            text-align: center;
            font-size: 1rem;
            width: 100%;
        }

        .btn-custom:hover {
            background-color: #0056b3;
        }

        table th {
            background: #f4f4f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Claims Management System</h1>
        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="/SubmitClaim" class="d-block">
                    <button class="btn-custom">Submit a Claim</button>
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="/VerifyClaims" class="d-block">
                    <button class="btn-custom">Verify Claims</button>
                </a>
            </div>
        </div>
     
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0jFfAkZddt2Vf3Pfj2z1CpGDSixBd72VFEqW91y8vjmkkV03" crossorigin="anonymous"></script>
</body>
</html>
