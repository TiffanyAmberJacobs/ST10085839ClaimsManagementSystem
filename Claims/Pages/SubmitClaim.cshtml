@page
@model SubmitClaimModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Your Claim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv3NfRr3VVVp5A7k6jwUnPRPZ5x2bF6GfOk84fTeXTz0wT3th1q9Xa9wrUuF" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .container {
            margin-top: 50px;
            padding: 30px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        button {
            padding: 12px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
        }

        button:hover {
            background-color: #0056b3;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control, .form-control-file, textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        textarea {
            height: 150px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Submit Your Claim</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="hours" class="form-label">Hours Worked:</label>
                <input type="number" id="hours" name="Input.HoursWorked" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="rate" class="form-label">Hourly Rate:</label>
                <input type="number" id="rate" name="Input.HourlyRate" class="form-control" step="0.01" required />
            </div>
            <div class="form-group">
                <label for="notes" class="form-label">Additional Notes:</label>
                <textarea id="notes" name="Input.AdditionalNotes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="file" class="form-label">Upload Document:</label>
                <input type="file" id="file" name="Document" class="form-control-file" accept=".pdf,.docx,.xlsx" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0jFfAkZddt2Vf3Pfj2z1CpGDSixBd72VFEqW91y8vjmkkV03" crossorigin="anonymous"></script>
</body>
</html>
