@page
@model SubmitClaimModel
<div class="container">
    <h2>Submit Your Claim</h2>
    <form method="post" enctype="multipart/form-data">
        <label for="hours">Hours Worked:</label>
        <input type="number" id="hours" name="Input.HoursWorked" required /><br />
        <label for="rate">Hourly Rate:</label>
        <input type="number" id="rate" name="Input.HourlyRate" step="0.01" required /><br />
        <label for="notes">Additional Notes:</label>
        <textarea id="notes" name="Input.AdditionalNotes"></textarea><br />
        <label for="file">Upload Document:</label>
        <input type="file" id="file" name="Document" accept=".pdf,.docx,.xlsx" /><br />
        <button type="submit">Submit</button>
    </form>
</div>